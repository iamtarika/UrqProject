<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="default_text">
        <item name="android:textSize">@dimen/text_size18</item>
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="name_stores">
        <item name="android:textSize">@dimen/name_stores</item>
        <item name="android:textColor">@color/name_stores</item>
    </style>

    <style name="num_q">
        <item name="android:textSize">@dimen/num_q</item>
        <item name="android:textColor">@color/num_q</item>
    </style>

    <style name="text_size20">
        <item name="android:textSize">@dimen/text_size20</item>
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="title_main">
        <item name="android:label">@string/app_name</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="cancel_button">
        <item name="android:textSize">@dimen/text_size18</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:backgroundTint">@color/cancel_button</item>
    </style>

    <style name="ok_button">
        <item name="android:textSize">@dimen/text_size18</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:backgroundTint">@color/ok_button</item>
    </style>

    <style name="edit_button">
        <item name="android:textSize">@dimen/text_size18</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:backgroundTint">@color/edit_button</item>
    </style>





    <style name="topic_title">
        <item name="android:textSize">@dimen/text_size25</item>
        <item name="android:textColor">@color/topic_color</item>
    </style>
    <style name="detail_alert">
        <item name="android:textSize">@dimen/text_size15</item>
        <item name="android:textColor">@color/detail_color</item>
    </style>


</resources>
